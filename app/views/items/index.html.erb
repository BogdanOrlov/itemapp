<h1>Items</h1>
<%= link_to 'Добавить', new_item_path , id: "new_item_link", remote: true %>
<table class="table">
  <thead>
    <tr>
      <th>Список Item'ов</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
        <%= render('item', :item=> item) %>
    <% end %>
  </tbody>
</table>


